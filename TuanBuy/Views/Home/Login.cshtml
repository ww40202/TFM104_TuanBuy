<body>
<div class="disflix" id="app">
    <div class="rew50"><a href=""><img src="~/img/Log.jpg" alt=""> 一起讓美好的事物發生</a></div>
     <div class="regi">
        <h2>會員登入</h2>
        <label class="addp" for="email">電子郵件</label>
        <input class="addtext" type="text" name="" id="email" v-model="user.email">
        <label class="addp" for="password"  >密碼</label>
        <input class="addtext" type="text" name="" id="password" v-model="user.password">
        <div class="registerdiv">
            <input type="submit" name="commit" value="登入" class="registerbtn" data-disable-with="登入" v-on:click="login">
        </div>
        <div class="iagree">繼續進行代表你同意<a href="">服務條款</a></div>
        <div class="registerdiv"><a class="registerbtn2" href="">Google登入</a></div>
        <div class="reborder"></div>
        <a class="reloginpass" href="">註冊</a>
        <a class="reloginpass" href="">忘記密碼或重設密碼</a>
        <div class="nothingmg"></div>
    </div>
</div>
</body>

<script>
    var app = new Vue({
        el: "#app",
        data : {
            user:new user()
        },
        methods: {
            login:function() {
                let self = this;
                axios.post("/api/LoginAndRegister", self.user).then((resp) => {
                    console.log(resp);
                    if (resp.data === "登入成功") {
                        window.location.href = "/Home/Index";
                        return;
                    }
                    if (resp.data === '帳號未啟用') {
                        alert("帳號未啟用");
                        return;
                    }
                    alert("帳號密碼錯誤");
                });
            }
        }
    })

</script>